{{> navbar}}
<main>
  {{#if posts.length}}
    {{#each posts}}
      <article>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p class="timestamp">Posted by {{this.user.username}} on {{formatDate this.createdAt}}</p>
      </article>
    {{/each}}
  {{else}}
    <p>No posts found.</p>
  {{/if}}
</main>
